    <script>
        const downloadButton = document.getElementById('downloadButton');
        const downloadModal = document.getElementById('downloadModal');
        const downloadLink = document.getElementById('downloadLink');
        const androidOption = document.getElementById('androidOption');
        const windowsOption = document.getElementById('windowsOption');
        const downloadText = downloadLink.querySelector('span');
        const featuresTable = document.getElementById('featuresTable');

        // Định nghĩa các URL và văn bản tải xuống cho từng nền tảng
        const downloadData = {
            android: {
                link: 'https://www.mediafire.com/file/nycxg0bjqh5mwyz/baolara_v1.2.3.lua/file',
                text: 'Download for Android'
            },
            windows: {
                link: 'https://github.com/baoprobelike/Baolara/releases',
                text: 'Download for Windows'
            }
        };

        // Hàm để chọn nền tảng
        function selectPlatform(platform) {
            // Xóa trạng thái 'selected' khỏi tất cả các tùy chọn
            androidOption.classList.remove('selected');
            windowsOption.classList.remove('selected');

            // Thêm trạng thái 'selected' cho nền tảng được chọn
            if (platform === 'android') {
                androidOption.classList.add('selected');
                featuresTable.classList.remove('hidden');
            } else {
                windowsOption.classList.add('selected');
                featuresTable.classList.add('hidden');
            }

            // Cập nhật liên kết và văn bản của nút tải xuống chính
            downloadLink.href = downloadData[platform].link;
            downloadText.textContent = downloadData[platform].text;
        }

        // Đặt nền tảng mặc định khi modal mở
        downloadButton.addEventListener('click', () => {
            selectPlatform('android'); // Mặc định chọn Android
            downloadModal.style.display = 'flex';
        });

        // Đóng modal khi click ra ngoài
        downloadModal.addEventListener('click', (e) => {
            if (e.target === downloadModal) {
                downloadModal.style.display = 'none';
            }
        });

        // Thêm sự kiện click cho các tùy chọn nền tảng
        androidOption.addEventListener('click', () => {
            selectPlatform('android');
        });

        windowsOption.addEventListener('click', () => {
            selectPlatform('windows');
        });

        // Hiệu ứng tuyết rơi
        const body = document.body;
        const numSnowflakes = 100;

        function createSnowflake() {
            const snowflake = document.createElement('div');
            snowflake.className = 'snowflake';
            const size = Math.random() * 5 + 5; // Kích thước từ 5px đến 10px
            const duration = Math.random() * 10 + 5; // Thời gian rơi từ 5s đến 15s
            const delay = Math.random() * 10; // Thời gian chờ trước khi rơi

            snowflake.style.width = `${size}px`;
            snowflake.style.height = `${size}px`;
            snowflake.style.left = `${Math.random() * 100}vw`;
            snowflake.style.animationDuration = `${duration}s`;
            snowflake.style.animationDelay = `${delay}s`;
            
            body.appendChild(snowflake);

            // Xóa bông tuyết sau khi nó rơi xong để tránh lỗi bộ nhớ
            setTimeout(() => {
                snowflake.remove();
            }, duration * 1000 + 1000);
        }
        
        // Tạo các bông tuyết ban đầu
        for (let i = 0; i < numSnowflakes; i++) {
            createSnowflake();
        }

        // Tạo thêm bông tuyết định kỳ
        setInterval(createSnowflake, 500); // Mỗi 0.5 giây tạo một bông tuyết mới
    </script>

</body>
</html>
